{% extends 'base.html.twig' %}


{% block body %}
    
<div class="container my-5">
<h1 class="text-warning">📜 Espace membre</h1>

<div class="row">
    <div class="col-md-3">
        {% include 'account/_menu.html.twig' %}
    </div>
    <div class="col-md-9">
        <div class="card shadow-lg border-0 rounded-4 p-4 bg-dark text-white">
            <h5 class="mb-3">📦 Mes dernières commandes</h5>

            {% if orders|length == 0 %}
                <div class="alert alert-warning text-center">
                    🤷‍♂️ Vous n'avez passé aucune commande pour le moment.
                </div>
            {% else %}
                <table class="table table-dark table-bordered text-center">
                    <thead>
                        <tr>
                            <th scope="col">N°</th>
                            <th scope="col">📅 Date</th>
                            <th scope="col">📊 Statut</th>
                            <th scope="col">💰 Total T.T.C</th>
                            <th scope="col">🔍 Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                            <tr>
                                <td class="fw-bold text-warning">#{{ order.id }}</td>
                                <td>{{ order.createdAt|date('d/m/Y') }}</td>
                                <td>{{ include('admin/state.html.twig', { field : { 'value' : order.state } } ) }}</td>    
                                <td>{{ order.totalWt|price }}</td>
                                <td>
                                    <a href="{{ path ('app_account_order', { 'id_order' : order.id } ) }}" 
                                    class="btn btn-outline-warning btn-sm">
                                    📄 Voir détails
                                    </a>
                                </td>
                            </tr>  
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</div>
</div>

{% endblock %}
