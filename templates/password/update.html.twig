{% extends "base.html.twig" %}

{% block body %}
<div class="container my-5 d-flex justify-content-center">
<div class="card shadow-lg border-2 rounded-4 p-4 w-50" style="background-color: rgba(237, 237, 237, 0.85);">
    <h1 class="text-center" style="color: #ff8505;">Nouveau mot de passe</h1>

    <p class="text-center mt-2">Veuillez entrer votre nouveau mot de passe ci-dessous.</p>

    <div class="mt-4">
        {{ form_start(form) }}
        
        <div class="mb-3">
            {{ form_label(form.plainPassword.first, 'ðŸ”‘ Choisissez votre nouveau mot de passe', {'label_attr': {'class': 'fw-bold'}}) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control bg-secondary text-white border-2 rounded-3 p-2'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.plainPassword.second, 'ðŸ”„ Confirmez votre mot de passe', {'label_attr': {'class': 'fw-bold'}}) }}
